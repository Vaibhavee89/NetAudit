FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    nmap \
    net-tools \
    iputils-ping \
    tcpdump \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements_webapp.txt .
RUN pip install --no-cache-dir -r requirements_webapp.txt

# Copy application files
COPY . .

# Create necessary directories
RUN mkdir -p reports static templates

# Set permissions for network operations
RUN chmod +x webapp.py run_webapp.py

# Expose port
EXPOSE 5000

# Create non-root user but with network capabilities
RUN useradd -m -u 1000 netaudit
RUN setcap cap_net_raw,cap_net_admin=eip /usr/bin/python3.9

# Switch to non-root user
USER netaudit

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/ || exit 1

# Run the application
CMD ["python", "webapp.py"] 